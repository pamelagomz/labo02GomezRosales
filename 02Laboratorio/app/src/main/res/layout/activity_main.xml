<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/layout_background"
    android:gravity="center_horizontal"
    tools:context=".MainActivity">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="BMI"
        android:textSize="@dimen/medium_text_size"
        android:textColor="@color/white"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/extra_small_gap"
        android:layout_marginBottom="@dimen/extra_small_gap"
        />




    <androidx.cardview.widget.CardView
        android:layout_width="@dimen/card_width"
        android:layout_height="@dimen/card_heith"
        android:layout_gravity="center"
        android:backgroundTint="@color/card_background"
        app:cardCornerRadius="@dimen/card_corner_radius"
        app:cardElevation="@dimen/card_elavation"
        app:cardMaxElevation="@dimen/card_elavation"
        android:layout_marginTop="@dimen/small_gap" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Weight"
                android:textSize="@dimen/medium_text_size"
                android:textColor="@color/white"
                android:layout_marginTop="@dimen/big_gap"
                android:layout_marginStart="@dimen/big_gap"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="@dimen/small_gap" >

                <EditText
                    android:id="@+id/weight_edit_tex"
                    android:layout_width="6dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:textSize="@dimen/extra_large_text_size"
                    android:textColor="@color/white"
                    android:hint="60"
                    android:textColorHint="@color/text_hint"
                    android:inputType="numberDecimal"

                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Kg"
                    android:textColor="@color/white"
                    android:textSize="@dimen/medium_text_size"
                    />

            </LinearLayout>


        </LinearLayout>


    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="@dimen/card_width"
        android:layout_height="@dimen/card_heith"
        android:backgroundTint="@color/card_background"
        app:cardCornerRadius="@dimen/card_corner_radius"
        app:cardElevation="@dimen/card_elavation"
        app:cardMaxElevation="@dimen/card_elavation"
        android:layout_marginTop="@dimen/small_gap" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/height"
                android:textSize="@dimen/medium_text_size"
                android:textColor="@color/white"
                android:layout_marginStart="@dimen/big_gap"
                android:layout_marginTop="@dimen/big_gap"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="@dimen/small_gap" >


                <EditText
                    android:id="@+id/height_edit_tex"
                    android:layout_width="6dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:textSize="@dimen/extra_large_text_size"
                    android:textColor="@color/white"
                    android:hint="180"
                    android:textColorHint="@color/text_hint"
                    android:inputType="numberDecimal"

                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="cm"
                    android:textColor="@color/white"
                    android:textSize="@dimen/medium_text_size"
                    />

            </LinearLayout>


        </LinearLayout>


    </androidx.cardview.widget.CardView>

    <Button
        android:id="@+id/action_calculate"
        android:layout_width="@dimen/card_width"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/btn_background"
        android:layout_gravity="center"
        android:text="CALCULATE"
        android:textColor="@color/white"
        android:textSize="@dimen/action_text_size"
        android:padding="@dimen/button_padding"
        />

    <androidx.cardview.widget.CardView
        android:layout_width="@dimen/card_width"
        android:layout_height="@dimen/small_card_heith"
        android:backgroundTint="@color/card_background"
        app:cardCornerRadius="@dimen/card_corner_radius"
        app:cardElevation="@dimen/card_elavation"
        app:cardMaxElevation="@dimen/card_elavation"
        android:layout_marginTop="@dimen/small_gap" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center"
            >

            <TextView
                android:id="@+id/bmi_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/large_text_size"
                android:textColor="@color/white"
                android:textStyle="bold"

                />

            <TextView
                android:id="@+id/result_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/medium_text_size"
                android:textColor="@color/white"
                android:textStyle="bold"

                />

            <TextView
                android:id="@+id/info_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/small_text_size"
                android:textColor="@color/white"
                android:textStyle="bold"

                />





        </LinearLayout>


    </androidx.cardview.widget.CardView>






</LinearLayout>